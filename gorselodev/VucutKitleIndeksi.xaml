<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="gorselodev.VucutKitleIndeksi"
             Title="Vücut Kitle İndeksi Hesaplama">
    <StackLayout Padding="20" Spacing="10">
        <StackLayout Orientation="Horizontal" Spacing="10">
            <Label Text="Kilonuzu Seçin" VerticalOptions="Center" />
            <Slider x:Name="sliderWeight" Minimum="30" Maximum="150" ValueChanged="SliderWeight_ValueChanged" HorizontalOptions="FillAndExpand" ThumbColor="#003C43" MinimumTrackColor="#003C43"/>
        </StackLayout>
        <Label Text="{Binding Value, Source={x:Reference sliderWeight}, StringFormat='Kilo: {0:F1}'}" />

        <StackLayout Orientation="Horizontal" Spacing="10">
            <Label Text="Boyunuzu Seçin" VerticalOptions="Center" />
            <Slider x:Name="sliderHeight" Minimum="100" Maximum="250" ValueChanged="SliderHeight_ValueChanged" HorizontalOptions="FillAndExpand" ThumbColor="#003C43" MinimumTrackColor="#003C43" />
        </StackLayout>
        <Label Text="{Binding Value, Source={x:Reference sliderHeight}, StringFormat='Boy: {0:F1}'}" />

        <Button Text="Hesapla" Clicked="CalculateBMI" BackgroundColor="#003C43"/>
        <Label x:Name="lblResult" />
    </StackLayout>
</ContentPage>



