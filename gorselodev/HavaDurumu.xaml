<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="gorselodev.HavaDurumu"
             Title="HavaDurumu" >
    <StackLayout Padding="10">
        <Entry x:Name="textBox" Placeholder="Şehir girin.."  TextColor="black"/>
        <Button Text="Ekle" Clicked="Button_Clicked" BackgroundColor="#7AB2B2"/>
        <Label Text="Silmek İstediğiniz hava durumu görseline tıklayınız!"/>


        <ScrollView VerticalOptions="FillAndExpand">
            <StackLayout x:Name="imageStackLayout" VerticalOptions="StartAndExpand" HorizontalOptions="CenterAndExpand" Spacing="5">
            </StackLayout>
        </ScrollView>

    </StackLayout>
</ContentPage>